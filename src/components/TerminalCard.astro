} = Astro.props;
---
<section id="identity-term" class="section -mt-6 md:-mt-25">
  <h2 class="text-lg md:text-xl lg:text-2xl font-bold text-(--muted) mb-3">
    <span class="hero-name glitch glitch-anim text-(--accent-pink) reveal" style="--d:0" data-text="#identidad">#identidad</span>
  </h2>
  <div class="panel overflow-hidden">
    <div class="panel-chrome">
      <span class="dot red"></span>
      <span class="dot yellow"></span>
      <span class="dot green"></span>
      <span class="ml-2 text-(--muted) text-xs">/usr/bin/identity</span>
    </div>
    <div class="p-5 md:p-7">
      <div class="font-mono text-sm leading-relaxed">
        <div class="reveal" style="--d:1"><span class="text-(--accent-phosphor)">$</span> whoami</div>
        <div class="mb-3 reveal" style="--d:2">{name}</div>

        <div class="reveal" style="--d:3"><span class="text-(--accent-phosphor)">$</span> echo</div>
        <div class="mt-1 reveal" style="--d:4">{summary}</div>

        <div class="mt-4 reveal" style="--d:5"><span class="text-(--accent-phosphor)">$</span> location</div>
        <div class="flex items-center gap-2 mb-0 reveal" style="--d:6">
          <span>{location}</span>
          <span aria-hidden="true">üáªüá™</span>
        </div>
      </div>
    </div>
  </div>
</section>
<style>
  #identity-term .reveal { opacity: 0; transform: translateY(12px); transition: opacity .55s ease, transform .55s cubic-bezier(.22,.61,.36,1); transition-delay: calc(var(--d, 0) * 90ms); }
  #identity-term .reveal.is-visible { opacity: 1; transform: none; }
  @media (prefers-reduced-motion: reduce) {
    #identity-term .reveal { opacity: 1; transform: none; transition: none; }
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const root = document.getElementById('identity-term');
    if (!root) return;
    const items = root.querySelectorAll('.reveal');
    if (!('IntersectionObserver' in window)) {
      items.forEach(el => el.classList.add('is-visible'));
      return;
    }
    const io = new IntersectionObserver((entries, obs) => {
      entries.forEach(e => {
        if (e.isIntersecting) {
          e.target.classList.add('is-visible');
          obs.unobserve(e.target);
        }
      });
    }, { threshold: 0.1 });
    items.forEach(el => io.observe(el));
  });
</script>
