---
import SkillIcon from "./icons/SkillIcon.astro";
interface Props { name: string; group: string; compact?: boolean; showGroup?: boolean }
const { name, group, compact = false, showGroup = true } = Astro.props as Props;
---
<div class={`node ${compact ? 'node--compact' : ''} block`}>
  <div class="flex items-center justify-between gap-2 mb-2">
    <div class="flex items-center gap-2 min-h-[20px]">
      <span class="text-[var(--accent-pink)] items-center"><SkillIcon name={name} /></span>
      <h3 class="font-semibold text-[var(--fg)] capitalize leading-none">{name}</h3>
    </div>
    {compact ? null : <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" class="opacity-60"><path d="M7 17L17 7M7 7h10v10"/></svg>}
  </div>
  {showGroup ? (
    <div class="flex flex-wrap gap-2">
      <span class="text-xs px-2 py-1 rounded border border-[var(--grid)]/80 text-[var(--muted)]">{group}</span>
    </div>
  ) : null}
</div>
