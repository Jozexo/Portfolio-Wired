---
interface Props {
  name: string;
  size?: number;
  class?: string;
}
const { name, size = 20, class: className = '' } = Astro.props as Props;
const key = name.toLowerCase();
---
{ key === 'linkedin' && (
  <svg width={size} height={size} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" class={className} aria-hidden="true">
    <rect x="3" y="3" width="18" height="18" rx="2" />
    <path d="M8 11v7" />
    <path d="M8 7h.01" />
    <path d="M12 11v7" />
    <path d="M12 14c0-2 3-2 3 0v4" />
  </svg>
)}
{ key === 'instagram' && (
  <svg width={size} height={size} viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" class={className} aria-hidden="true">
    <rect x="3" y="3" width="18" height="18" rx="5" />
    <circle cx="12" cy="12" r="4" />
    <path d="M17.5 6.5h.01" />
  </svg>
)}
