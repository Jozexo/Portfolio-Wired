---
import type { Project } from "../data/projects";
import "../styles/components/project-card.css";
interface Props { project: Project }
const { project } = Astro.props as Props;
---
<a href={project.href} class="node project-card project-card--image-focus">
  <figure class="project-card__figure">
    {project.image ? (
      <img src={project.image} alt={`${project.title} preview`} loading="lazy" class="project-card__img" />
    ) : (
      <div class="project-card__placeholder">
        <iconify-icon icon="lucide:image" width="34" />
      </div>
    )}
    <figcaption class="project-card__overlay">
      <div class="project-card__overlay-header">
        <h3 class="project-card__title">{project.title}</h3>
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" class="arrow"><path d="M7 17L17 7"/><path d="M7 7h10v10"/></svg>
      </div>
      <p class="project-card__desc">{project.description}</p>
      <div class="project-card__tags">
        {project.tags.map((t: string) => (
          <span class="tag">{t}</span>
        ))}
      </div>
    </figcaption>
  </figure>
</a>
